{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    //"baseUrl": "./",
    //"incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false
  },
  "typedocOptions": {
    "entryPoints": [
      "src/**/*.ts" // <--- take everything from this location
    ],
    "out": "js_docs/" // <--- output directory
  },
  "include": ["src"],
  "exclude": [
    "client/", "client", "node_modules/"
  ]
}
